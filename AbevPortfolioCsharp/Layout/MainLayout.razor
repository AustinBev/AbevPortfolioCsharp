@inherits LayoutComponentBase

<div class="app">
    <div class="background"></div>
    <div class="frame"></div>
    <div class="layout-container">
        <aside class="sidebar">
            <h1 class="name">Austin Beveridge</h1>
            <p class="role">Junior Software Engineer</p>
            
            <NavMenu />

            <div class="theme-toggle">
                <div class="toggle-option" data-selected="true">
                    <span class="checkbox"></span> DARK
                </div>
                <div class="toggle-option" data-selected="false">
                    <span class="checkbox"></span> LIGHT
                </div>
            </div>
        </aside>

        <main class="main-content">
            @Body
        </main>
    </div>
</div>
